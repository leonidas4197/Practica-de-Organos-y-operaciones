package Practica3Java;

public class Organo {

	//Constantes de cada estado del organo
	public static final int SANO = 0;
	public static final int DOLOR = 1;
	public static final int PERJUDICADO = 2;
	public static final int CANCERIGENO = 3;
	
	//Constante de cada posicion
	public static final int  CABEZA= 0;
	public static final int  TRONCOSUPERIOR= 1;
	public static final int  TRONCOINFERIOR= 2;
	
	//Constante de la importancia vital de los organos
	public static final int  VITAL= 0;
	public static final int  BASICA= 1;
	public static final int  SECUNDARIA= 2;
	
	//Constantes para el nombre de los organos
	public static final int cerebro = 0;
	public static final int corazon = 1;
	public static final int rinion = 2;
	public static final int pulmonizq = 3;
	public static final int pulmonder = 4;
	public static final int oidoizq = 5;
	public static final int oidoder = 6;
	public static final int estomago = 7;
	
	//Variables miembro
	private int nombre;
	public static int numOrgano;
	private int funcion;
	private String estado;
	private double peso;
	private String posicion;
	private int importancia;
	private String imagen;
	public boolean activo;
	/**
	 * @return the nombre
	 */
	public int getNombre() {
		return nombre;
	}
	/**
	 * @return the numOrgano
	 */
	public int getNumOrgano() {
		return numOrgano;
	}
	/**
	 * @return the funcion
	 */
	public int getFuncion() {
		return funcion;
	}
	/**
	 * @return the estado
	 */
	public String getEstado() {
		return estado;
	}
	/**
	 * @return the peso
	 */
	public double getPeso() {
		return peso;
	}
	/**
	 * @return the posicion
	 */
	public String getPosicion() {
		return posicion;
	}
	/**
	 * @return the importancia
	 */
	public int getImportancia() {
		return importancia;
	}
	/**
	 * @return the imagen
	 */
	public String getImagen() {
		return imagen;
	}
	/**
	 * @param nombre the nombre to set
	 */
	public void setNombre(int nombre) {
		this.nombre = nombre;
	}
	/**
	 * @param numOrgano the numOrgano to set
	 */
	public void setNumOrgano(int numOrgano) {
		this.numOrgano = numOrgano;
	}
	/**
	 * @param funcion the funcion to set
	 */
	public void setFuncion(int funcion) {
		this.funcion = funcion;
	}
	/**
	 * @param estado the estado to set
	 */
	public void setEstado(String estado) {
		this.estado = estado;
	}
	/**
	 * @param peso the peso to set
	 */
	public void setPeso(double peso) {
		this.peso = peso;
	}
	/**
	 * @param posicion the posicion to set
	 */
	public void setPosicion(String posicion) {
		this.posicion = posicion;
	}
	/**
	 * @param importancia the importancia to set
	 */
	public void setImportancia(int importancia) {
		this.importancia = importancia;
	}
	/**
	 * @param imagen the imagen to set
	 */
	public void setImagen(String imagen) {
		this.imagen = imagen;
	}
	//Modificando creamos datos aleatorios cuando
	//creamos un nuevo jugador
    public Organo() {
    	super();
    	Organo.numOrgano++;
    	this.nombre= (int) (Math.random()*7);
    	this.importancia = (int) (Math.random()*3);
    	
    }
    
}
